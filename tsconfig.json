{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "strict": true,
        "module": "esnext",
        "strictNullChecks": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "es6",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "paths": {
            "@components": ["app/components/@export.ts"],
            "@views": ["app/views/@export.ts"],
            "@common/*": ["app/@common/*"],
        }
    }
}